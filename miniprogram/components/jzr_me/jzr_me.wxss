}

.xy_jzr_user_h_v1{
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0),rgba(0,0,0,1));
}

.xy_jzr_user_head_view{
  background: #ffffff;
  width: calc(100% - 20px);
  height: 70px;
  padding:10px;
  position: absolute;
  left: 0;
  bottom: 0;
  border-radius: 10px 10px 0 0;
}

.xy_jzr_u_btn_h{
  display: flex;
  width: calc(100% - 40rpx);
  height: 140rpx;
  align-items: center;
  justify-content: center;  
  text-align: center;
}
.userinfo-avatar_jzr_u{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
