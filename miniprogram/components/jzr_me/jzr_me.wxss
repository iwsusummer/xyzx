.xy_jzr_user_head_body{
  height: 200px;
  margin:17px;
  background-image:  url("https://7879-xyzx-umkoo-1303013619.tcb.qcloud.la/my-image20208121154.jpg?sign=e97cd254ac2f211b8e03134f81c16244&t=1600089357");
